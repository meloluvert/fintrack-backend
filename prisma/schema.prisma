generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  password   String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  monthly_reports MonthlyReport[]
  transactions    Transaction[]
  categories      Category[]

  @@map("users")
}

model Category {
  id           String        @id @default(uuid())
  name         String
  user_id      String
  transactions Transaction[]
  created_at   DateTime      @default(now())
  updated_at   DateTime      @updatedAt

  user User @relation(fields: [user_id], references: [id])

  @@map("categories")
}

model Transaction {
  id          String          @id @default(uuid())
  user_id     String
  category_id String
  name        String?
  description String?
  amount      Int
  type        TypeTransaction @default(INCOME)
  file_url    String?

  date       DateTime @default(now())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user     User     @relation(fields: [user_id], references: [id])
  category Category @relation(fields: [category_id], references: [id])

  @@map("transactions")
}

model MonthlyReport {
  id            String @id @default(uuid())
  month         Month
  year          Int
  total_income  Int?
  total_expense Int?

  user_id String
  user    User   @relation(fields: [user_id], references: [id])

  @@unique([user_id, month, year])
  @@map("monthly_reports")
}

enum Month {
  JANUARY
  FEBRUARY
  MARCH
  APRIL
  MAY
  JUNE
  JULY
  AUGUST
  SEPTEMBER
  OCTOBER
  NOVEMBER
  DECEMBER
}

enum TypeTransaction {
  INCOME
  EXPENSE
}
