{
  "paths": {
    "/categories": {
      "post": {
        "tags": ["Categorias"],
        "summary": "Criar nova categoria",
        "description": "Cria uma nova categoria associada ao usuário autenticado.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "description": "Dados necessários para criar uma nova categoria",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RequestCreateCategory"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Categoria criada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseCreateCategory"
                }
              }
            }
          },
          "400": {
            "description": "Erro ao criar categoria (usuário não autenticado ou nome inválido)"
          }
        }
      },
      "get": {
        "tags": ["Categorias"],
        "summary": "Listar categorias do usuário autenticado",
        "description": "Retorna todas as categorias associadas ao usuário autenticado. É necessário enviar um token JWT válido no cabeçalho Authorization.",
        "operationId": "getCategoriesByUser",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de categorias retornada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetCategoriesResponse"
                },
                "example": [
                  {
                    "id": "902d2b74-f760-4931-8d06-769c49b578a8",
                    "name": "Transporte",
                    "created_at": "2025-10-17T13:29:23.888Z",
                    "updated_at": "2025-10-17T13:29:23.888Z"
                  },
                  {
                    "id": "b42193d1-5122-41ce-b42a-fc3a76d7f9e3",
                    "name": "Alimentação",
                    "created_at": "2025-10-17T13:10:02.441Z",
                    "updated_at": "2025-10-17T13:10:02.441Z"
                  }
                ]
              }
            }
          },
          "401": {
            "description": "Token ausente ou inválido",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/categories/{id}": {
      "put": {
        "tags": ["Categorias"],
        "summary": "Editar categoria",
        "description": "Edita o nome de uma categoria pertencente ao usuário autenticado.",
        "operationId": "editCategory",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" },
            "description": "ID da categoria a ser editada"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RequestEditCategory"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Categoria atualizada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseEditCategory"
                }
              }
            }
          },
          "400": {
            "description": "Erro ao editar categoria",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string" }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Token ausente ou inválido"
          }
        }
      },
      "delete": {
        "tags": ["Categorias"],
        "summary": "Remover categoria",
        "description": "Remove uma categoria do usuário e retorna os dados da categoria excluída.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID da categoria a ser removida"
          }
        ],
        "responses": {
          "200": {
            "description": "Categoria removida com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseDeleteCategory"
                }
              }
            }
          },
          "400": {
            "description": "Erro ao remover categoria"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "RequestCreateCategory": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Supermercado"
          }
        },
        "required": ["name"]
      },
      "ResponseCreateCategory": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "8b5c2c03-189e-4a0c-a9dc-424a96ac15ab"
          },
          "name": { "type": "string", "example": "Supermercado" },
          "user_id": {
            "type": "string",
            "example": "54ea687e-8f42-4d47-9a40-f520c5ff74ef"
          },
          "created_at": {
            "type": "string",
            "example": "2025-10-14T01:34:29.374Z"
          },
          "updated_at": {
            "type": "string",
            "example": "2025-10-14T01:34:29.374Z"
          }
        }
      },
      "GetCategoriesResponse": {
        "type": "array",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "RequestEditCategory": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Combustível"
          }
        },
        "required": ["name"]
      },
      "ResponseEditCategory": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "name": { "type": "string" },
          "created_at": { "type": "string", "format": "date-time" },
          "updated_at": { "type": "string", "format": "date-time" }
        }
      },
      "ResponseDeleteCategory": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "created_at": { "type": "string", "format": "date-time" },
          "updated_at": { "type": "string", "format": "date-time" }
        },
        "required": ["id", "name", "created_at", "updated_at"]
      }
    }
  }
}
